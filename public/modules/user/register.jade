doctype html
html
    head
        meta(charset='UTF-8')
        title Twenty | Install
        meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
        link(href='/nine/css/bootstrap.min.css', rel='stylesheet', type='text/css')
        link(href='/nine/css/login.css', rel='stylesheet', type='text/css')
        script(src='/nine/lib/jquery-1.10.2.min.js')
        script(src='/nine/lib/angular.js')
        script(src='/nine/lib/angular-resource.min.js')
        script(src='/nine/system/common/util.js')
        script(src="/nine/system/user/login.js")
    body
        .form-box.transparent.hide(ng-app="user.login")
            .header
                 img(src="/twenty/images/logo.svg")
            form(ng-controller="register",redirect='/nine/modules/index/index')
                .body
                    .form-group
                        input.form-control(type='text', name='name', placeholder='Full name',ng-model='user.name')
                    .form-group
                        input.form-control(type='text', name='email', placeholder='Email',ng-model='user.email')
                    .form-group
                        input.form-control(type='password', name='password', placeholder='Password',ng-model='user.password')
                .footer.text-center
                    button.btn.bg-aqua(type='submit',ng-click='register(user)') Install
        script.
            $(function(){
                $('.form-box').addClass('fadeIn animated').removeClass('hide')
            })